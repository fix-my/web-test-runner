{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "validate-problems": {
      "inputs": [
        "problems/**/*.json",
        "problems/**/src/**",
        "problems/**/solution/**",
        "problems/**/test.ts"
      ]
    }
  }
}
